{
  "name": "public",
  "version": "0.0.3",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/qwertyyb/public.git"
  },
  "scripts": {
    "tsc": "tsc",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start:render": "cd ./render && npm run dev",
    "start:main": "nodemon --exec 'npm run tsc && cross-env NODE_ENV=development electron ./index.js'",
    "start": "concurrently \"npm run start:render\" \"wait-on http://localhost:5000  && npm run start:main\"",
    "build:render": "cd ./render && npm run build",
    "build:main": "npm run tsc && electron-builder -c.mac.identity=null",
    "build": "NODE_ENV=production && npm run build:render && npm run build:main",
    "postinstall": "electron-rebuild -m node_modules/robotjs",
    "release": "NODE_ENV=production && npm run build:render && npm run tsc && electron-builder --publish=always",
    "build-dir": "electron-builder --dir"
  },
  "nodemonConfig": {
    "ignore": [
      "./render"
    ],
    "ext": "ts"
  },
  "keywords": [],
  "author": "qwertyyb",
  "description": "public tools",
  "license": "ISC",
  "build": {
    "appId": "cn.qwertyyb.public",
    "asar": false,
    "files": [
      "app/",
      "plugins/",
      "assets/**/*",
      "render/public/",
      "./index.js",
      "!**/*.ts",
      "!**/*.map",
      "!scripts/"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "afterSign": "scripts/notarize.js",
    "mac": {
      "asar": true,
      "category": "public.app-category.utilities",
      "type": "distribution",
      "identity": "Yongbang Yang (T68XK6867P)",
      "hardenedRuntime": true,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "gatekeeperAssess": false,
      "electronLanguages": [
        "en",
        "zh_CN"
      ],
      "extendInfo": {
        "LSBackgroundOnly": 1,
        "LSUIElement": 1
      }
    }
  },
  "devDependencies": {
    "@types/mathjs": "^6.0.11",
    "@types/node": "^12.20.4",
    "concurrently": "^6.0.0",
    "cross-env": "^7.0.3",
    "electron": "^12.0.2",
    "electron-builder": "^22.9.1",
    "electron-devtools-installer": "^3.1.1",
    "electron-notarize": "^1.0.0",
    "electron-rebuild": "^2.3.5",
    "nodemon": "^2.0.7",
    "robotjs": "^0.6.0",
    "typescript": "^4.2.2",
    "wait-on": "^5.2.1"
  },
  "dependencies": {
    "@electron/remote": "^1.0.4",
    "electron-updater": "^4.3.5",
    "file-icon": "^4.0.0",
    "mathjs": "^9.2.0",
    "qrcode": "^1.4.4",
    "tiny-pinyin": "^1.3.2"
  }
}
